<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authLandingFragment">

    <!-- Auth Landing Fragment -->
    <fragment
        android:id="@+id/authLandingFragment"
        android:name="com.example.ctec3703_cafeapp.ui.auth.AuthLandingFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_auth_landing_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_auth_landing_to_register"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.ctec3703_cafeapp.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_menu"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/action_login_to_authLanding"
            app:destination="@id/authLandingFragment" />
    </fragment>

    <!-- Register Fragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.ctec3703_cafeapp.ui.auth.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_register_to_authLanding"
            app:destination="@id/authLandingFragment" />
    </fragment>

    <!-- Menu Fragment -->
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.ctec3703_cafeapp.ui.menu.MenuFragment"
        android:label="Menu">
        <action
            android:id="@+id/action_menu_to_cart"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_menu_to_profile"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_menu_to_feedback"
            app:destination="@id/feedbackFragment" />
    </fragment>

    <!-- Cart Fragment -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.ctec3703_cafeapp.ui.cart.CartFragment"
        android:label="Cart">
        <action
            android:id="@+id/action_cart_to_profile"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_cart_to_menu"
            app:destination="@id/menuFragment" />
    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ctec3703_cafeapp.ui.profile.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profile_to_menu"
            app:destination="@id/menuFragment" />
    </fragment>

    <!-- Feedback Fragment -->
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.example.ctec3703_cafeapp.ui.feedback.FeedbackFragment"
        android:label="Feedback">
        <action
            android:id="@+id/action_feedback_to_menu"
            app:destination="@id/menuFragment" />
    </fragment>

</navigation>